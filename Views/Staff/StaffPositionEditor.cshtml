@model TwineViewModel<StaffPosition, Staff, Position>
<partial name="_Validation" />
<h5 class="bg-@Model.baseObject.Theme text-white text-center p-2">@Model.baseObject.Action</h5>
<form asp-action="@Model.baseObject.Action" method="post">

    @if (Model.baseObject.ShowReadOnlyFields)
    {
        <div class="form-group">
            <label asp-for="baseObject.Object.Id"></label>
            <input class="form-control" asp-for="baseObject.Object.Id" readonly />
        </div>
    }
    <div class="dropdown-divider"></div>
    <label>@Model.baseObject.Object.Position.GetType().Name</label>

    <div class="form-group">
        <label asp-for="baseObject.Object.Position.Name"></label>
        <div>
            <span asp-validation-for="baseObject.Object.Position.Name" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="baseObject.Object.Position.Name"
               readonly />
    </div>

    <div class="form-group">
        <label>Изменить объект</label>
        <select class="form-control" asp-items="@(new SelectList(Model.FirstSlaves,"Id","Email"))"></select>
    </div>

    <div class="dropdown-divider"></div>

    <label>@Model.baseObject.Object.Staff.GetType().Name</label>

    <div class="form-group">
        <label asp-for="baseObject.Object.Staff.Name"></label>
        <div>
            <span asp-validation-for="baseObject.Object.Staff.Name" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="baseObject.Object.Staff.Name"
               readonly />
    </div>

    <div class="form-group">
        <label asp-for="baseObject.Object.Staff.Email"></label>
        <div>
            <span asp-validation-for="baseObject.Object.Staff.Email" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="baseObject.Object.Staff.Email"
               readonly />
    </div>

    <div class="form-group">
        <label>Изменить объект</label>
        <select class="form-control" asp-items="@(new SelectList(Model.SecondSlaves,"Id","Name"))"></select>
    </div>



    @if (Model.baseObject.ShowAction)
    {
        <button class="btn btn-@Model.baseObject.Theme" type="submit" asp-action="@Model.baseObject.ActionObjectName">@Model.baseObject.Action</button>
    }
    <a class="btn btn-secondary" asp-action="StaffPosition">Back</a>
</form>