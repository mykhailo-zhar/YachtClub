<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/Layout.css" rel="stylesheet" />

    <script src="/scripts/jquery/jquery.min.js"></script>
    <script src="/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#ContentDiv').height($(document).innerHeight() - 100);
        });
        $(document).resize(function () {
            $('#ContentDiv').height($(document).innerHeight() - 100);
        });
    </script>
</head>
<body class="layout_image">
    <div class="m-2">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary bg-opacity-75 text-opacity-100">
            <div class="container-fluid">
                <a class="btn navbar-brand  text-white" asp-controller="Home" asp-action="Index">
                    Домой
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <!--Отладочная панель-->
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="btn text-white" asp-controller="Home" asp-action="ReloadDatabase">Перезагрузить базу данных</a>
                                <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="ReloadDatabase">Перезагрузить базу данных</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <!--Панель кладовщика-->
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="btn text-white" asp-controller="Warehouse" asp-action="Material">
                                    Кладовщик
                                </a>
                                <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Warehouse" asp-action="Material">
                                            Материалы
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Warehouse" asp-action="Materialtype">
                                            Типы материалов
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Warehouse" asp-action="Seller">
                                            Поставщик материала
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Warehouse" asp-action="Materiallease">
                                            Договор на поставку материалов
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Repair" asp-action="Extradationrequest">Заявка на выдачу</a>
                                    </li>
                        </li>
                    </ul>
                </div>
                </li>
                <!--Панель персонала-->
                <li class="nav-item">
                    <div class="btn-group">
                        <a class="btn text-white" asp-controller="Staff" asp-action="Staff">
                            Персонал
                        </a>
                        <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-controller="Staff" asp-action="Staff">
                                    Персонал
                                </a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Staff" asp-action="Position">Должности</a></li>
                            <li><a class="dropdown-item" asp-controller="Staff" asp-action="YachtCrew">Экипаж яхт</a></li>
                        </ul>
                    </div>
                </li>
                <!--Панель ремонта-->
                <li class="nav-item">
                    <div class="btn-group">
                        <a class="btn text-white" asp-controller="Repair" asp-action="RepairStaff">
                            Ремонтники
                        </a>
                        <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-controller="Repair" asp-action="RepairStaff">
                                    Ремонтники
                                </a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Repair" asp-action="Yachttest">Тестовые заплывы</a></li>
                            <li><a class="dropdown-item" asp-controller="Repair" asp-action="Repair">Ремонт</a></li>
                        </ul>
                    </div>
                </li>
                <!--Типы контрактов-->
                <li class="nav-item">
                    <div class="btn-group">
                        <a class="btn text-white" asp-controller="" asp-action="">
                            Панель управления
                        </a>
                        <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-controller="Client" asp-action="Yachtleasetype">
                                    Тип контракта на яхты
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Client" asp-action="Review">
                                    Отзывы
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Owner" asp-action="Contracttype">
                                    Тип контрактов для клиентов
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Owner" asp-action="Contract">
                                    Контракт
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Owner" asp-action="Event">
                                    События
                                </a>
                            </li>

                        </ul>
                    </div>
                </li>
                <!--Яхты-->
                <li class="nav-item">
                    <div class="btn-group">
                        <a class="btn text-white" asp-controller="Client" asp-action="Yacht">
                            Яхты
                        </a>
                        <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Client" asp-action="Yacht">Яхты</a></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Client" asp-action="Yachttype">
                                    Тип яхт
                                </a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Client" asp-action="Yachtlease">Договор по яхте</a></li>
                        </ul>
                    </div>
                </li>
                <!--Клиенты-->
                <li class="nav-item">
                    <a class="btn text-white" asp-controller="Client" asp-action="Person">
                        Клиент
                    </a>
                </li>
                </ul>
            </div>
    </div>
    </nav>
    <div align="center">
        <div class="initial_div bg-white">
            <div id="ContentDiv">
                <div>
                    @RenderBody()
                </div>

            </div>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2022 - YachtClub&trade; @* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
                </div>
            </footer>
        </div>
    </div>

    </div>

</body>
</html>