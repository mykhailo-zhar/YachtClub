                        <table class="table table-sm table-striped table-bordered">
                        <thead>
                            <tr>
                            </tr>
                        </thead>
                        <tbody>
                            @RenderBody()
                        </tbody>
                        <tfoot>
                            <tr>
                            </tr>
                        </tfoot>
                         </table>
                    *@
                    @RenderBody()

                </div>
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2022 - YachtClub&trade; @* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
                    </div>
                </footer>
            </div>
        </div>

    </div>
   
</body>
</html>