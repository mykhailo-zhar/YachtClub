<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/Layout.css" rel="stylesheet" />

    <script src="/scripts/jquery/jquery.min.js"></script>
    <script src="/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#ContentDiv').height( $(document).innerHeight() - 100);
        });
    </script>
</head>
<body class="layout_image">
    <div class="m-2">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary bg-opacity-75 text-opacity-100">
            <div class="container-fluid">
                <a class="btn navbar-brand  text-white" asp-controller="Home" asp-action="Index">
                    Домой
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="btn-group">
                                <a class="btn text-white" asp-controller="Home" asp-action="ReloadDatabase">Перезагрузить базу данных</a>
                                <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="ReloadDatabase">Перезагрузить базу данных</a>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="AddValues">Добавить без удаления</a></li>

                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="btn text-white" href="#">Pricing</a>
                        </li>
                        <li>
                            <div class="btn-group">
                                <a class="btn text-white" asp-controller="Staff" asp-action="Staff">
                                    Персонал
                                </a>
                                <button type="button" class="btn text-white dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item"  asp-controller="Staff" asp-action="Staff">
                                          Персонал
                                        </a>
                                    </li>
                                    <li><a class="dropdown-item" href="#">Должности</a></li>
                                    <li><a class="dropdown-item" href="#">Должности персонала</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div align="center">
            <div class="initial_div bg-white">
                <div id="ContentDiv" >
                    @*
                        <table class="table table-sm table-striped table-bordered">
                        <thead>
                            <tr>
                            </tr>
                        </thead>
                        <tbody>
                            @RenderBody()
                        </tbody>
                        <tfoot>
                            <tr>
                            </tr>
                        </tfoot>
                         </table>
                    *@
                    @RenderBody()

                </div>
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2022 - YachtClub&trade; @* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
                    </div>
                </footer>
            </div>
        </div>

    </div>
   
</body>
</html>