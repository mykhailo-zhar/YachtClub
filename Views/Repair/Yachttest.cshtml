@model IEnumerable<Yachttest>

<table class="table table-sm table-striped table-bordered text-white">
    <thead>
        <tr class="table-dark">
            <td>
                ID
            </td>
            <td>
                Дата проведения осмотра
            </td>
            <td>
                Результаты
            </td>
            <td>
                Яхта
            </td>
            <td colspan="2">
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
        <tr class="text-black btn-area-2">
            <td>
                @sp.Id
            </td>
            <td>
                @sp.Date
            </td>
            <td>
                @($"{sp.Staff.Staff.Name} {sp.Staff.Staff.Surname} {sp.Staff.Staff.Email}")
            </td>
            <td>
                @($"{sp.Yacht.Name} Типа: {sp.Yacht.Type.Name}")
            </td>
            <td align="center">
                @if (!Methods.IsStr(sp.Results))
                {
                    <a class="btn btn-secondary"> Детали </a>
                }
                else
                {
                    <a class="btn btn-primary" asp-action="DetailsYachttest" asp-route-id="@sp.Id"> Детали </a>
                }
            </td>
            <td align="center">
                <a class="btn btn-danger" asp-action="DeleteYachttest" asp-route-id="@sp.Id">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="10" align="center">
                <a asp-action="CreateYachttest" class="btn btn-primary">
                    <div style="width: 50vw;">
                        Создать
                    </div>
                </a>
            </td>
        </tr>
    </tfoot>
</table>

