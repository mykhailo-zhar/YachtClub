
@{
    var MethodName = typeof(Yachttest).Name;
    string Create = CRUD.Create + MethodName;
    string Edit = CRUD.Edit + MethodName;
    string Delete = CRUD.Delete + MethodName;
}
@model IEnumerable<Yachttest>

<table class="table table-sm table-striped table-bordered text-white">
    <thead>
        <tr class="table-dark">
            <th class="d-print-table-cell">
                <div class="text-center" style="font-size: 3em">
                    Осмотр яхты
                </div>
                <div align="center">
                    <a asp-action="@Create" class="btn btn-primary w-75">
                        Создать
                    </a>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="text-black">
                <td>
                    <div class="card" style="width: auto;">
                        <div class="card-body">
                            <div class="position-absolute" style="right:20px;">
                                <a class="btn btn-danger" asp-action="@Delete" asp-route-id="@obj.Id">Удалить</a>
                            </div>
                            <h5 class="card-title">
                                <div>
                                    Имя яхты: @obj.Yacht.Name
                                </div>
                                <div>
                                    Тип яхты: @obj.Yacht.Type.Name
                                </div>
                            </h5>
                            <div class="card-text" style="max-width: 75vw">
                                <div>
                                    Дата проведения: @obj.Date
                                </div>
                                <div>
                                    Осмотр проведён: @obj.Staff.Staff.Name @obj.Staff.Staff.Surname (Номер сотрудника: @obj.Staffid)
                                </div>
                                <span>Описание:</span>
                                <p style="text-indent: 2em; white-space: pre-line;">
                                    @(obj.Results)
                                </p>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

