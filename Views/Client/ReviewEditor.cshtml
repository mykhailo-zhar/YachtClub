@model ObjectViewModel<Review>
<partial name="_Validation" />
<h5 class="bg-@Model.Theme text-white text-center p-2 ">@Model.Action</h5>

@{
    ViewBag.FromStaff = ViewBag.FromStaff ?? false;
}

<form  asp-action="@Model.Action" method="post">
    <div class="@Model.HideOnDelete">
        <div class="form-group" hidden>
            <label asp-for="Object.Id"></label>
            <input class="form-control" asp-for="Object.Id" readonly />
        </div>

        <input hidden asp-for="Object.Date"/>
        <input hidden asp-for="Object.Clientid"/>

        <div class="form-group">
            <label>Ваша оценка</label>
            <div>
                <span asp-validation-for="Object.Rate" class="text-danger"></span>
            </div>
            <input class="form-control" asp-for="Object.Rate" mix="1" max="5" readonly="@Model.ReadOnly" />
        </div>

        <div class="form-group">
            <label asp-for="Object.Text"></label>
            <div>
                <span asp-validation-for="Object.Text" class="text-danger"></span>
            </div>
            <textarea class="form-control" asp-for="Object.Text"
                      readonly="@Model.ReadOnly"></textarea>
        </div>

        <div class="form-group" hidden>
            <div class="form-check form-switch position-relative d-flex" style="left: 20px">
                <div>
                    <input asp-for="Object.Public" class="form-check-input" type="checkbox">
                </div>
                <div>
                    <label>Публичный отзыв</label>
                </div>
            </div>
        </div>
    </div>
    <partial name="_EditorBottomButtons" model="@new EditorBottomButtonsViewModel {
        ShowAction = Model.ShowAction,
        Theme = Model.Theme,
        Action = Model.ActionObjectName,
        BackAction = Model.Object.GetType().Name
    }" />
</form>