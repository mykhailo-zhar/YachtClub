@model ObjectViewModel<Person>
<partial name="_Validation" />
<h5 class="bg-@Model.Theme text-white text-center p-2 ">@Model.Action</h5>

@{ 
    ViewBag.FromStaff = ViewBag.FromStaff ?? false;
}

<form asp-action="@Model.Action" method="post">

    <div class="form-group @Model.AlwaysHidden">
        <label asp-for="Object.Id"></label>
        <input class="form-control" asp-for="Object.Id" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Object.Name"></label>
        <div>
            <span asp-validation-for="Object.Name" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Object.Name"
               readonly="@Model.ReadOnly" />
    </div>

    <div class="form-group">
        <label asp-for="Object.Surname"></label>
        <div>
            <span asp-validation-for="Object.Surname" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Object.Surname"
               readonly="@Model.ReadOnly" />
    </div>

    <div class="form-group">
        <label asp-for="Object.Birthdate"></label>
        <div>
            <span asp-validation-for="Object.Birthdate" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Object.Birthdate" type="date"
               readonly="@Model.ReadOnly" />
    </div>

    <div class="form-group">
        <label asp-for="Object.Sex">Category</label>
        <div>
            <span asp-validation-for="Object.Sex" class="text-danger"></span>
        </div>
        @if (!Model.ReadOnly)
        {
            <select asp-for="Object.Sex" class="form-control"
                    asp-items="@(new SelectList(new List<string> { "Male", "Female", "Other"}))">
                <option value="" disabled selected>Выберите пол</option>
            </select>
        }
        else
        {
            <input readonly class="form-control" asp-for="Object.Sex" />
        }
    </div>

    <div class="form-group">
        <label asp-for="Object.Email"></label>
        <div>
            <span asp-validation-for="Object.Email" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Object.Email" type="email"
               readonly="@Model.ReadOnly" />
    </div>

    <div class="form-group">
        <label asp-for="Object.Phone"></label>
        <div>
            <span asp-validation-for="Object.Phone" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Object.Phone" type="tel"
               readonly="@Model.ReadOnly" />
    </div>

    @if (ViewBag.FromStaff || Model.Object.Staffonly)
    {
        <div class="form-group @Model.HideOnDelete">
            <div class="form-check form-switch position-relative d-flex" style="left: 20px">
                <div>
                    <input asp-for="Object.Staffonly" class="form-check-input" type="checkbox">
                </div>
                <div>
                    <label>Только для персонала</label>
                </div>
            </div>
        </div>
    }
    else
    {
        <input hidden asp-for="Object.Staffonly" />
    }

    <partial name="_EditorBottomButtons" model="@new EditorBottomButtonsViewModel {
        ShowAction = Model.ShowAction,
        Theme = Model.Theme,
        Action = Model.ActionObjectName,
        BackAction = ViewBag.FromStaff ? nameof(Staff) : Model.Object.GetType().Name,
        BackController = ViewBag.FromStaff ? nameof(Staff) : null
    }" />
</form>